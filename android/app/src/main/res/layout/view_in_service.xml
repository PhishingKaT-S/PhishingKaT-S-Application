<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mybackground"
    >

  <LinearLayout
      android:id="@+id/scoreColor"
      android:layout_width="260dp"
      android:layout_height="60dp"
      android:orientation="vertical"
      android:background="@drawable/upperbackgreen"
      android:layout_gravity="center"
      android:layout_marginTop="50dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView_sender"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="5dp"
          android:text="01029601776"
          android:textColor="#FFFFFF" />

      <TextView
          android:id="@+id/textView_date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="10dp"
          android:layout_weight="3"
          android:gravity="right"
          android:text="2010-10-26 11:40"
          android:textAllCaps="false"
          android:textSize="12dp"

          android:textColor="#ffffff"
          android:layout_marginRight="10dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="스미싱 의심 URL 포함으로 분류된 문자입니다"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


  </LinearLayout>
  <LinearLayout
      android:layout_width="260dp"
      android:layout_height="95dp"
      android:layout_gravity="center"
      android:padding="10dp"
      android:background="@drawable/lowerback"
      >

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="고객님의 택배가 반송 처리되었습니다. 자세한 사항은 아래 링크를 통해 확인할 수 있습니다. http://bit.ly/sPadkfjl"
        android:textSize="12dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="260dp"
      android:layout_height="40dp"
      android:layout_gravity="center"
      android:orientation="horizontal"
      android:gravity="right"
      >

    <Button
        android:layout_marginRight="40dp"
        android:layout_marginVertical="5dp"
        android:id="@+id/btn_cancel"
        android:layout_width="69dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:text="안 전"
        android:textColor="@color/letterblue"
        android:fontFamily="@font/applesdgothicb"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_call"
        android:layout_width="69dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:text="신 고"
        android:textColor="@color/letterblond"
        android:fontFamily="@font/applesdgothicb"
        android:background="@drawable/blondrenctangle"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/showLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="bottom"
      android:visibility="invisible">

    <LinearLayout
        android:background="@drawable/upperwhite"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"

        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="310dp"

          >

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="20dp">


          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_stock"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="주식/투자"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />

          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_vishing"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="보이스피싱"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />

          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_insurance"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="보험/대출안내"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />

          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_gambling"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="게임/도박"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />

          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_survey"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="설문조사"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />

          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_telemarketing"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="텔레마케팅"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />

          <RadioButton
              android:buttonTint="@color/mylightblue"
              android:id="@+id/radio_others"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:text="기타(해당사항없음)"
              android:textColor="@drawable/radioletter"
              android:fontFamily="@font/adrameothic2"
              android:textSize="14dp"
              />
        </RadioGroup>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp">


        <Button
            android:background="@color/mygrey"
            android:id="@+id/btn_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="@color/mywhite"
            android:fontFamily="@font/applesdgothicb"
            android:textSize="18dp"
            />

        <Button
            android:background="@color/myblue"
            android:id="@+id/btn_call2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="신고하기"
            android:textColor="@color/mywhite"
            android:fontFamily="@font/applesdgothicb"
            android:textSize="18dp"
            />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>


</LinearLayout>