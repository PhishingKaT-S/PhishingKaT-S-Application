<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="260dp"
      android:layout_height="60dp"
      android:orientation="vertical"
      android:background="@color/mygrey"
      android:layout_gravity="center"
      android:layout_marginTop="50dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView_sender"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:text="01029601776"
          android:textColor="#FFFFFF" />

      <TextView
          android:id="@+id/textView_date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_weight="3"
          android:gravity="right"
          android:text="2010-10-26 11:40"
          android:textAllCaps="false"
          android:textSize="12dp"

          android:textColor="#ffffff"
          android:layout_marginRight="10dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_margin="5dp"
        android:text="스미싱 의심 URL 포함으로 분류된 문자입니다"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


  </LinearLayout>
  <LinearLayout
      android:layout_width="260dp"
      android:layout_height="95dp"
      android:layout_gravity="center"
      android:padding="10dp"
      android:background="@color/mywhite"
      >

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="고객님의 택배가 반송 처리되었습니다. 자세한 사항은 아래 링크를 통해 확인할 수 있습니다. http://bit.ly/sPadkfjl"
        android:textSize="12dp" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="260dp"
      android:layout_height="40dp"
      android:layout_gravity="center"
      android:orientation="horizontal"
      android:gravity="right"
      >

    <Button
        android:layout_marginRight="60dp"
        android:id="@+id/btn_cancel"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="right"
        android:text="안전" />

    <Button
        android:id="@+id/btn_call"
        android:layout_width="50dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:text="신고"
        android:gravity="right"
        />
  </LinearLayout>


</LinearLayout>